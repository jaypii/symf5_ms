{% extends 'base.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}
    <h1>Product</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ product.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ product.name }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ product.price }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ product.description }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('product_index') }}"><i class="bi bi-chevron-double-left"></i>&nbsp; Back</a>

    <a class="btn btn-warning" href="{{ path('product_edit', {'id': product.id}) }}"><i class="bi bi-pen-fill"></i>&nbsp;Edit</a>

    {{ include('product/_delete_form.html.twig') }}
{% endblock %}
