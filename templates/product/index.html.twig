{% extends 'base.html.twig' %}

{% block title %}Product index{% endblock %}

{% block body %}
    <h2>Product index</h2>
    <a href="{{ path('product_new') }}" class="btn btn-success"><i class="bi bi-plus-circle-fill"></i>&nbsp;Create</a>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Price</th>
                <th>Description</th>
                <th>&nbsp;</th>
            </tr>
        </thead>
        <tbody>
        {% for product in products %}
            <tr>
                <td>{{ product.id }}</td>
                <td>{{ product.name }}</td>
                <td>{{ product.price }}</td>
                <td>{{ product.description }}</td>
                <td>
                    <a class="btn btn-sm btn-info" href="{{ path('product_show', {'id': product.id}) }}"><i class="bi bi-eye-fill"></i></a>
                    <a class="btn btn-warning btn-sm" href="{{ path('product_edit', {'id': product.id}) }}"><i class="bi bi-pen-fill"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
